{
  "extends": "@tsconfig/node10/tsconfig.json",

  "compilerOptions": {
    "target": "es6",
    "lib": ["es2019"],
    "outDir": "./lib",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "include": ["./tests/**/*", "./src/**/*"],
  "exclude": [
    "./tests/**/*.test.js",
    "./src/**/*.test.js",
    "node_modules",
    "**/node_modules"
  ]
}
